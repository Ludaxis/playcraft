{
  "name": "playcraft",
  "private": true,
  "version": "1.0.0",
  "description": "PlayCraft - AI-powered application builder",
  "keywords": [
    "ai",
    "app-builder",
    "code-generator",
    "react",
    "vite"
  ],
  "homepage": "https://playcraft.games",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohammadreza87/playcraft.git"
  },
  "author": "PlayCraft Team",
  "license": "MIT",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @playcraft/web dev",
    "dev:docs": "pnpm --filter @playcraft/docs dev",
    "build": "pnpm --filter @playcraft/web build",
    "build:docs": "pnpm --filter @playcraft/docs build",
    "build:all": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "format": "prettier --write \"**/*.{ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,css,json,md}\"",
    "prepare": "husky || true",
    "clean": "rm -rf node_modules apps/*/node_modules"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.14.2"
}
